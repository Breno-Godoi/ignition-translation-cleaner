{
  "name": "ignition-translation-cleaner",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "dev:app": "concurrently \"npm:dev\" \"npm:dev:electron\"",
    "build:web": "vite build",
    "build:app": "npm run build:web && electron-builder",
    "build:portable": "npm run build:web && electron-builder --win portable"
  },
  "build": {
    "appId": "com.ignition.translationcleaner",
    "productName": "Ignition Syncing Tool",
    "compression": "maximum",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "!dist/win-unpacked{,/**/*}",
      "!dist/*.exe",
      "!dist/builder-debug.yml",
      "!**/*.map",
      "!**/*.md"
    ],
    "asar": true,
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  },
  "dependencies": {
    "bootstrap": "^5.3.6",
    "bootstrap-icons": "^1.13.1",
    "fast-xml-parser": "^5.3.4",
    "jszip": "^3.10.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/jszip": "^3.4.1",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "concurrently": "^9.2.1",
    "electron": "^38.2.1",
    "electron-builder": "^26.0.12",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "wait-on": "^9.0.1"
  }
}
